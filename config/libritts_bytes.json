{
    "project_name": "smoltts_160m_librispeech",
    "checkpoint_path": "../checkpoints",
    "init_folder": "../inits/smoltts_byte",
    "dataset_path": "../dataset/tokenized_libritts_bytes",
    "model_path": "pretrained_model",
    "batch_size": 20,
    "max_epochs": 6,
    "num_workers": 4,
    "gradient_clip": 1.0,
    "learning_rate": 5e-4,
    "lr_start": 1e-3,
    "lr_warmup_steps": 30000,
    "weight_decay": 0.01,
    "betas": [
        0.90,
        0.95
    ],
    "eps": 1e-5,
    "val_every_n_steps": 250,
    "save_every_n_steps": 5000,
    "max_sequence_length": 768,
    "use_bf16": true,
    "use_wandb": true,
    "use_pretrained": false
}